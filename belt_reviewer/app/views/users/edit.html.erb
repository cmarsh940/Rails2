<% content_for :title, "Welcome" %>

<% content_for :jumbo do %>
  <h1>Hello <%= current_user.first_name %></h1>
  <p>Edit user info below</p>
<% end %>

<% content_for :nav do %>
  <a href="/users/<%= current_user.id %>">Events Dashboard</a>
<% end %>

<% content_for :col1 do %>
  <div class="col-sm-offset-3 col-sm-10">
    <h1>Edit Profile</h1>
  </div>
  <form action="/users/<%= current_user.id %>" method="post" class="form-horizontal">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <input type="hidden" name="_method" value="patch">
    <div class="form-group">
      <label class="col-sm-3 control-label">First Name</label>
      <div class="col-sm-9">
        <input type="text" class="form-control" name="user[first_name]" value="<%= current_user.first_name %>">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Last Name</label>
      <div class="col-sm-9">
        <input type="text" class="form-control" name="user[last_name]" value="<%= current_user.last_name %>">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Email</label>
      <div class="col-sm-9">
        <input type="text" class="form-control" name="user[email]" value="<%= current_user.email %>">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Location</label>
      <div class="col-sm-6">
        <input type="text" class="form-control" name="user[address]" value="<%= current_user.address %>">
      </div>
      <div class="col-sm-3">
        <select name="user[state]" class="form-control">
          <option>CA</option>
          <option>IL</option>
          <option>TX</option>
          <option>VA</option>
          <option>WA</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-10">
        <button type="submit" class="btn btn-primary">Update Profile</button>
      </div>
    </div>
  </form>
<% end %>
